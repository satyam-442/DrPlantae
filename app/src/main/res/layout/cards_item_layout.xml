<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="15dp"
    app:cardCornerRadius="12sp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/cart_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Product Name"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/primary_dark"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/cart_image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cart_name_layout"
            android:layout_marginTop="2dp" />

        <LinearLayout
            android:id="@+id/cart_price_layout_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cart_image_layout"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/product_price_layoutonef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Price :- "
                android:textAlignment="center"
                android:textColor="@color/primary_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cart_price_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="  "
                android:textAlignment="center"
                android:textColor="@color/primary_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_price_layouttwof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint=" Rs."
                android:textAlignment="center"
                android:textColor="@color/primary_dark"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cart_price_layout_linear"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/product_price_layoutone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity Ordered :- "
                android:textAlignment="center"
                android:textColor="@color/primary_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cart_quantity_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="  "
                android:textAlignment="center"
                android:textColor="@color/primary_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_price_layouttwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint=" Pcs."
                android:textAlignment="center"
                android:textColor="@color/primary_dark"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>